<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Database - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard"><i class="fas fa-shield-alt me-2"></i>Admin Dashboard</a>
            <div class="navbar-nav me-auto">
                <a class="nav-link" href="/admin/live-buses">Live Buses</a>
                <a class="nav-link active" href="/admin/staff-db">Staff DB</a>
                <a class="nav-link" href="/admin/public-db">Public DB</a>
                <a class="nav-link" href="/admin/buses-running">Buses Map</a>
            </div>
            <div class="d-flex">
                <form action="/auth/logout" method="post">
                    <button class="btn btn-outline-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <h2 class="mb-4"><i class="fas fa-users me-2"></i>Staff Database</h2>
        
        <% if (staffUsers && staffUsers.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Employee ID</th>
                            <th>Role</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% staffUsers.forEach(staff => { %>
                            <tr>
                                <td><strong><%= staff.name || 'N/A' %></strong></td>
                                <td><%= staff.employeeId || 'N/A' %></td>
                                <td>
                                    <span class="badge <%= staff.role === 'conductor' ? 'bg-primary' : 'bg-info' %>">
                                        <%= staff.role ? staff.role.charAt(0).toUpperCase() + staff.role.slice(1) : 'N/A' %>
                                    </span>
                                </td>
                                <td><%= staff.phone || 'N/A' %></td>
                                <td>
                                    <span class="badge <%= staff.isActive ? 'bg-success' : 'bg-danger' %>">
                                        <%= staff.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <%= staff.createdAt ? new Date(staff.createdAt).toLocaleDateString() : 'N/A' %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewStaffDetails('<%= staff._id %>')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm <%= staff.isActive ? 'btn-outline-danger' : 'btn-outline-success' %>" onclick="toggleStaffStatus('<%= staff._id %>', <%= !staff.isActive %>)">
                                            <i class="fas fa-<%= staff.isActive ? 'ban' : 'check' %>"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
            <!-- Staff Statistics -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total Staff</h5>
                            <h2><%= staffUsers.length %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success">
                        <div class="card-body text-center">
                            <h5 class="card-title">Active Staff</h5>
                            <h2><%= staffUsers.filter(s => s.isActive).length %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info">
                        <div class="card-body text-center">
                            <h5 class="card-title">Conductors</h5>
                            <h2><%= staffUsers.filter(s => s.role === 'conductor').length %></h2>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>No staff members found.
            </div>
        <% } %>
    </div>

    <!-- Staff Details Modal -->
    <div class="modal fade" id="staffModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Staff Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="staffModalBody">
                    Loading...
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewStaffDetails(staffId) {
            // You can implement staff detail view here
            document.getElementById('staffModalBody').innerHTML = `
                <p>Staff ID: ${staffId}</p>
                <p class="text-muted">Detailed view functionality can be implemented here.</p>
            `;
            new bootstrap.Modal(document.getElementById('staffModal')).show();
        }

        function toggleStaffStatus(staffId, newStatus) {
            if (confirm(`Are you sure you want to ${newStatus ? 'activate' : 'deactivate'} this staff member?`)) {
                // You can implement staff status toggle here
                alert('Staff status toggle functionality can be implemented here.');
                // location.reload();
            }
        }
    </script>
</body>
</html>

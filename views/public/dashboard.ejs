<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Public Dashboard - Bus Tracking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <div class="container-fluid">
            <a class="navbar-brand" href="/public/dashboard"><i class="fas fa-map-marked-alt me-2"></i>Bus Tracker</a>
            <div class="navbar-nav me-auto">
                <a class="nav-link active" href="/public/dashboard">Dashboard</a>
                <a class="nav-link" href="/public/search">Search Buses</a>
            </div>
            <div class="d-flex">
                <span class="navbar-text me-3">
                    Welcome, <strong><%= user.name || 'User' %></strong>
                </span>
                <form action="/auth/logout" method="post">
                    <button class="btn btn-outline-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-gradient">
                    <div class="card-body text-center py-5">
                        <h2 class="mb-3 text-dark">
                            <i class="fas fa-bus me-2"></i>
                            Welcome to Bus Tracker
                        </h2>
                        <p class="lead text-dark">Find and track buses on your route in real-time</p>
                        <a href="/public/search" class="btn btn-primary btn-lg">
                            <i class="fas fa-search me-2"></i>Start Searching
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Travel Stats -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h4><i class="fas fa-search me-2"></i><span id="totalSearchesCount">0</span></h4>
                        <p class="mb-0">Bus Searches</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h4><i class="fas fa-bus me-2"></i><span id="completedTripsCount">0</span></h4>
                        <p class="mb-0">Trips Completed</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4><i class="fas fa-road me-2"></i><span id="totalKmTraveledCount">0</span> km</h4>
                        <p class="mb-0">Distance Traveled</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h4><i class="fas fa-calendar me-2"></i><span id="thisMonthTripsCount">0</span></h4>
                        <p class="mb-0">This Month</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card h-100 hover-card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-search fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">Search Buses</h5>
                        <p class="card-text">Find buses running between any two stations or locations</p>
                        <a href="/public/search" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Search Now
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card h-100 hover-card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas fa-map-marker-alt fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title">Live Tracking</h5>
                        <p class="card-text">Track your bus in real-time and get live location updates</p>
                        <button class="btn btn-success" onclick="showTrackingInfo()">
                            <i class="fas fa-info-circle me-2"></i>How to Track
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Routes -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-route me-2"></i>Popular Routes</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="popular-route">
                                    <i class="fas fa-bus text-info"></i>
                                    <strong>Mumbai → Pune</strong>
                                    <small class="d-block text-muted">Via Express Highway</small>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="popular-route">
                                    <i class="fas fa-bus text-info"></i>
                                    <strong>Delhi → Gurgaon</strong>
                                    <small class="d-block text-muted">Via NH-8</small>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="popular-route">
                                    <i class="fas fa-bus text-info"></i>
                                    <strong>Bangalore → Mysore</strong>
                                    <small class="d-block text-muted">Via SH-17</small>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="popular-route">
                                    <i class="fas fa-bus text-info"></i>
                                    <strong>Chennai → Pondicherry</strong>
                                    <small class="d-block text-muted">Via ECR</small>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="/public/search" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i>Search All Routes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Travel History -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-history me-2"></i>Recent Travel History</h5>
                        <button class="btn btn-sm btn-outline-primary" onclick="refreshTravelHistory()">
                            <i class="fas fa-refresh me-1"></i>Refresh
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Route</th>
                                        <th>Bus Number</th>
                                        <th>Distance (km)</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="travelHistoryTable">
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Loading travel history...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- How It Works -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-question-circle me-2"></i>How It Works</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="step-card">
                                    <div class="step-number">1</div>
                                    <i class="fas fa-search fa-2x text-primary mb-2"></i>
                                    <h6>Search</h6>
                                    <p class="small text-muted">Enter your starting point and destination to find available buses</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="step-card">
                                    <div class="step-number">2</div>
                                    <i class="fas fa-list fa-2x text-success mb-2"></i>
                                    <h6>Choose</h6>
                                    <p class="small text-muted">Select a bus from the list of available options with route details</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="step-card">
                                    <div class="step-number">3</div>
                                    <i class="fas fa-map-marker-alt fa-2x text-warning mb-2"></i>
                                    <h6>Track</h6>
                                    <p class="small text-muted">Get real-time location updates and track your bus on the map</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tracking Info Modal -->
    <div class="modal fade" id="trackingModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">How to Track a Bus</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-search fa-2x text-primary me-3"></i>
                        <div>
                            <h6 class="mb-1">Step 1: Search for Buses</h6>
                            <p class="mb-0 small text-muted">Use the search page to find buses on your route</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-mouse-pointer fa-2x text-success me-3"></i>
                        <div>
                            <h6 class="mb-1">Step 2: Click "Track Bus"</h6>
                            <p class="mb-0 small text-muted">Click the track button next to any bus in the search results</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt fa-2x text-warning me-3"></i>
                        <div>
                            <h6 class="mb-1">Step 3: View Live Location</h6>
                            <p class="mb-0 small text-muted">See the bus location update in real-time on the map</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="/public/search" class="btn btn-primary">Start Searching</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Travel Confirmation Modal -->
    <div class="modal fade" id="travelConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-question-circle me-2"></i>Did you catch the bus?
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-bus fa-3x text-info mb-3"></i>
                        <h6>Bus <span id="confirmBusNumber"></span></h6>
                        <p><strong id="confirmRoute"></strong></p>
                        <small class="text-muted">You searched for this bus 5 minutes ago</small>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-lg" onclick="confirmTravel(true)">
                            <i class="fas fa-check me-2"></i>Yes, I caught the bus
                        </button>
                        <button class="btn btn-outline-secondary" onclick="confirmTravel(false)">
                            <i class="fas fa-times me-2"></i>No, I didn't catch it
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let pendingConfirmation = null;
        
        // Load travel history
        async function loadTravelHistory() {
            try {
                const response = await fetch('/public/api/travel-history');
                const data = await response.json();
                
                if (data.success) {
                    updateTravelHistoryTable(data.travels);
                    updateTravelStats(data.stats);
                } else {
                    document.getElementById('travelHistoryTable').innerHTML = 
                        '<tr><td colspan="6" class="text-center text-danger">Error loading travel history</td></tr>';
                }
            } catch (error) {
                console.error('Error loading travel history:', error);
                document.getElementById('travelHistoryTable').innerHTML = 
                    '<tr><td colspan="6" class="text-center text-danger">Error loading travel history</td></tr>';
            }
        }
        
        // Update travel history table
        function updateTravelHistoryTable(travels) {
            const tbody = document.getElementById('travelHistoryTable');
            
            if (travels.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No travel history found. Start searching for buses to build your history!</td></tr>';
                return;
            }
            
            let html = '';
            travels.forEach(travel => {
                const date = new Date(travel.searchedAt).toLocaleDateString();
                const statusClass = travel.confirmed ? 'success' : travel.confirmed === false ? 'secondary' : 'warning';
                const statusText = travel.confirmed ? 'Traveled' : travel.confirmed === false ? 'Not Traveled' : 'Pending';
                
                html += `
                    <tr>
                        <td>${date}</td>
                        <td><strong>${travel.fromStation}</strong> → <strong>${travel.toStation}</strong></td>
                        <td>${travel.busNumber || 'N/A'}</td>
                        <td>${travel.distanceKm || 'N/A'} km</td>
                        <td><span class="badge bg-${statusClass}">${statusText}</span></td>
                        <td>
                            ${travel.confirmed === null ? 
                                `<button class="btn btn-sm btn-outline-info" onclick="showTravelConfirmation('${travel._id}', '${travel.busNumber}', '${travel.fromStation} → ${travel.toStation}')">Confirm</button>` :
                                '<small class="text-muted">Completed</small>'
                            }
                        </td>
                    </tr>
                `;
            });
            
            tbody.innerHTML = html;
        }
        
        // Update travel stats
        function updateTravelStats(stats) {
            if (stats) {
                document.getElementById('totalSearchesCount').textContent = stats.totalSearches || 0;
                document.getElementById('completedTripsCount').textContent = stats.completedTrips || 0;
                document.getElementById('totalKmTraveledCount').textContent = stats.totalKmTraveled || 0;
                document.getElementById('thisMonthTripsCount').textContent = stats.thisMonthTrips || 0;
            }
        }
        
        // Show travel confirmation modal
        function showTravelConfirmation(travelId, busNumber, route) {
            document.getElementById('confirmBusNumber').textContent = busNumber;
            document.getElementById('confirmRoute').textContent = route;
            pendingConfirmation = travelId;
            new bootstrap.Modal(document.getElementById('travelConfirmModal')).show();
        }
        
        // Confirm or deny travel
        async function confirmTravel(didTravel) {
            if (!pendingConfirmation) return;
            
            try {
                const response = await fetch('/public/api/confirm-travel', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        travelId: pendingConfirmation,
                        confirmed: didTravel
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Close modal and refresh history
                    bootstrap.Modal.getInstance(document.getElementById('travelConfirmModal')).hide();
                    loadTravelHistory();
                    
                    // Show success message
                    if (didTravel) {
                        alert('Great! Your travel has been recorded. Safe journey!');
                    } else {
                        alert('Thanks for the update!');
                    }
                } else {
                    alert('Error updating travel status: ' + data.error);
                }
            } catch (error) {
                console.error('Error confirming travel:', error);
                alert('Error updating travel status');
            }
            
            pendingConfirmation = null;
        }
        
        // Refresh travel history
        function refreshTravelHistory() {
            loadTravelHistory();
        }
        
        function showTrackingInfo() {
            new bootstrap.Modal(document.getElementById('trackingModal')).show();
        }
        
        // Check for pending confirmations on page load
        function checkPendingConfirmations() {
            // Check for bus searches from 5-10 minutes ago that need confirmation
            setTimeout(() => {
                fetch('/public/api/check-pending-confirmations')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.pendingTravel) {
                            const travel = data.pendingTravel;
                            showTravelConfirmation(travel._id, travel.busNumber, travel.fromStation + ' → ' + travel.toStation);
                        }
                    })
                    .catch(error => console.error('Error checking pending confirmations:', error));
            }, 2000); // Check after 2 seconds
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', () => {
            loadTravelHistory();
            checkPendingConfirmations();
            
            // Check for new confirmations every 5 minutes
            setInterval(checkPendingConfirmations, 5 * 60 * 1000);
        });
    </script>

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #17a2b8 0%, #007bff 100%);
        }

        .hover-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .popular-route {
            padding: 15px;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            text-align: center;
            background-color: #f8f9fa;
            height: 100%;
        }

        .popular-route:hover {
            background-color: #e9ecef;
            cursor: pointer;
        }

        .step-card {
            padding: 20px;
            position: relative;
        }

        .step-number {
            position: absolute;
            top: -10px;
            right: 20px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #007bff;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }
    </style>
</body>
</html>

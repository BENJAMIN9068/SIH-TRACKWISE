<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, maximum-scale=3.0">
    <title>Staff Login - Bus Tracking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-gradient">
    
    <div class="container-fluid py-3" style="min-height: 100vh;">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-11 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2><i class="fas fa-users me-2"></i>Staff Portal</h2>
                        <p class="mb-0">Conductor Login Portal</p>
                    </div>
                    <div class="card-body" style="padding: 1rem; overflow-y: visible;">
                        <!-- Login Form -->
                        <div id="loginForm">
                            <h4 class="text-center mb-4">Conductor Login</h4>
                            <div id="loginAlert" class="alert d-none"></div>
                            <form id="staffLoginForm">
                                <div class="mb-3">
                                    <label for="conductorId" class="form-label">Conductor ID</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                        <input type="text" class="form-control" id="conductorId" placeholder="Enter your conductor ID (e.g., BCS2024100)" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="loginPassword" class="form-label">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                        <input type="password" class="form-control" id="loginPassword" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 mb-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </button>
                            </form>
                            <div class="text-center">
                                <p>
                                    <a href="/staff/otp-reset" class="text-primary me-3">Reset Password (OTP)</a>
                                    <span class="text-muted">|</span>
                                    <a href="#" onclick="showForgotPasswordForm()" class="text-primary ms-3">Request Admin Help</a>
                                </p>
                            </div>
                        </div>

                        <!-- Forgot Password Form -->
                        <div id="forgotPasswordForm" class="d-none">
                            <h4 class="text-center mb-4">Reset Password</h4>
                            <div id="forgotAlert" class="alert d-none"></div>
                            <form id="staffForgotForm">
                                <div class="mb-3">
                                    <label for="forgotConductorId" class="form-label">Conductor ID</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                        <input type="text" class="form-control" id="forgotConductorId" placeholder="Enter your conductor ID" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="forgotConductorName" class="form-label">Conductor Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        <input type="text" class="form-control" id="forgotConductorName" placeholder="Enter your full name" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="forgotPhone" class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        <input type="tel" class="form-control" id="forgotPhone" placeholder="Enter your phone number" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-warning w-100 mb-3">
                                    <i class="fas fa-key me-2"></i>Request Password Reset
                                </button>
                            </form>
                            <div class="text-center">
                                <p><a href="#" onclick="showLoginForm()" class="text-primary">Back to Login</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showLoginForm() {
            document.getElementById('loginForm').classList.remove('d-none');
            document.getElementById('forgotPasswordForm').classList.add('d-none');
        }

        function showForgotPasswordForm() {
            document.getElementById('loginForm').classList.add('d-none');
            document.getElementById('forgotPasswordForm').classList.remove('d-none');
        }

        function showAlert(elementId, type, message) {
            const alert = document.getElementById(elementId);
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            alert.classList.remove('d-none');
        }

        // Staff Login Form
        document.getElementById('staffLoginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const conductorId = document.getElementById('conductorId').value;
            const password = document.getElementById('loginPassword').value;
            
            try {
                const response = await fetch('/auth/staff/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ conductorId, password })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('loginAlert', 'success', data.message);
                    setTimeout(() => {
                        window.location.href = data.redirect;
                    }, 1500);
                } else {
                    showAlert('loginAlert', 'danger', data.error);
                }
            } catch (error) {
                showAlert('loginAlert', 'danger', 'An error occurred. Please try again.');
            }
        });

        // Staff Forgot Password Form
        document.getElementById('staffForgotForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = {
                conductorId: document.getElementById('forgotConductorId').value,
                conductorName: document.getElementById('forgotConductorName').value,
                phoneNumber: document.getElementById('forgotPhone').value
            };
            
            try {
                const response = await fetch('/auth/staff/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert('forgotAlert', 'success', data.message);
                    // Clear form
                    document.getElementById('staffForgotForm').reset();
                } else {
                    showAlert('forgotAlert', 'danger', data.error);
                }
            } catch (error) {
                showAlert('forgotAlert', 'danger', 'An error occurred. Please try again.');
            }
        });
    </script>
</body>
</html>
